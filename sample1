using System;
using System.Text;

class Program
{
    static void Main(string[] args)
    {
        string input = "hellÄ…"; // Example string with special characters
        string escapedString = GetUnicodeEscapeSequences(input);
        Console.WriteLine(escapedString); // Output: \u0068\u0065\u006c\u006c\u0105
    }

    static string GetUnicodeEscapeSequences(string input)
    {
        StringBuilder builder = new StringBuilder();
        foreach (char c in input)
        {
            // Check if the character is ASCII or non-ASCII
            if ((int)c <= 127)
            {
                // ASCII characters are appended directly
                builder.Append(c);
            }
            else
            {
                // Non-ASCII characters are appended as Unicode escape sequences
                builder.Append("\\u");
                builder.Append(((int)c).ToString("x4"));
            }
        }
        return builder.ToString();
    }
}
