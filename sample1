using OpenQA.Selenium;
using OpenQA.Selenium.Chrome;
using System;

class Program
{
    static void Main()
    {
        IWebDriver driver = new ChromeDriver();

        try
        {
            // Navigate to your web application
            driver.Navigate().GoToUrl("http://yourwebapplication.com");

            // If the "Sign In" is in a different window, you may need to switch to it
            // Store the main window handle
            string mainWindowHandle = driver.CurrentWindowHandle;

            // Switch to the new window if necessary
            foreach (string handle in driver.WindowHandles)
            {
                if (handle != mainWindowHandle)
                {
                    driver.SwitchTo().Window(handle);
                    break;
                }
            }

            // Find the username input field and enter the username
            IWebElement usernameInput = driver.FindElement(By.Id("usernameInputId"));
            usernameInput.SendKeys("your_username");

            // Find the password input field and enter the password
            IWebElement passwordInput = driver.FindElement(By.Id("passwordInputId"));
            passwordInput.SendKeys("your_password");

            // Find and click the "Sign In" button
            IWebElement signInButton = driver.FindElement(By.XPath("//button[text()='Sign In']"));
            signInButton.Click();

            // Optionally switch back to the main window
            driver.SwitchTo().Window(mainWindowHandle);
        }
        catch (Exception ex)
        {
            Console.WriteLine("An error occurred: " + ex.Message);
        }
        finally
        {
            driver.Quit();
        }
    }
}
