using System;
using System.IO;

class Program
{
    static void Main()
    {
        string downloadPath = @"C:\Your\Download\Folder\Path"; // Replace with your actual download folder path

        // Search for files with single quotes at the beginning and end of the filename
        var files = Directory.GetFiles(downloadPath, "'*'");

        foreach (var filePath in files)
        {
            string fileName = Path.GetFileName(filePath);

            // Check if the file name starts and ends with a single quote
            if (fileName.StartsWith("'") && fileName.EndsWith("'"))
            {
                // Remove the single quotes
                string newFileName = fileName.Trim('\'');

                // Create the new full path with the updated file name
                string newFilePath = Path.Combine(downloadPath, newFileName);

                // Rename the file
                File.Move(filePath, newFilePath);

                Console.WriteLine($"Renamed: {fileName} to {newFileName}");
            }
        }
    }
}
