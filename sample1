using System;
using System.Globalization;

class Program
{
    static void Main()
    {
        string inputDate = "05/16/2024"; // Example input date in mm/dd/yyyy format

        // Parse the date string to a DateTime object
        DateTime parsedDate;
        if (DateTime.TryParseExact(inputDate, "MM/dd/yyyy", CultureInfo.InvariantCulture, DateTimeStyles.None, out parsedDate))
        {
            // Format the DateTime object to a string in dd/MM/yyyy format
            string outputDate = parsedDate.ToString("dd/MM/yyyy");

            Console.WriteLine($"Input Date (mm/dd/yyyy): {inputDate}");
            Console.WriteLine($"Output Date (dd/mm/yyyy): {outputDate}");
        }
        else
        {
            Console.WriteLine("Invalid date format.");
        }
    }
}
