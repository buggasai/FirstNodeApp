using System;

class Program
{
    static void Main()
    {
        string template = "Hello, my name is {0} and I am {1} years old.";
        string name = "John";
        int age = 30;
        
        // Replace placeholders with dynamic values
        string result = string.Format(template, name, age);
        
        Console.WriteLine(result);
    }
}
