using System;

class Program
{
    static void Main(string[] args)
    {
        string str = "hello"; // Example string
        int number = 3; // Number to replace the last character with
        string result = ReplaceLastCharacterWithNumber(str, number);
        Console.WriteLine($"The new string is: '{result}'");
    }

    static string ReplaceLastCharacterWithNumber(string input, int number)
    {
        if (string.IsNullOrEmpty(input))
        {
            throw new ArgumentException("Input string cannot be null or empty", nameof(input));
        }

        char newChar = number.ToString()[0]; // Convert number to character

        char[] charArray = input.ToCharArray();
        charArray[charArray.Length - 1] = newChar;
        return new string(charArray);
    }
}
