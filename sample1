AutoItX3 autoIt = new AutoItX3();

// Use WinWaitActive to wait for a window to appear with a timeout (e.g., 5 seconds)
int waitTime = 5; // seconds
int windowFound = autoIt.WinWaitActive("[REGEXPTITLE:.*Sign in.*]", "", waitTime);

if (windowFound == 0)
{
    throw new Exception("Sign in window not found. Please check the URL or the application.");
}
else
{
    Console.WriteLine("Sign in window detected.");
}
