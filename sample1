using System;
using OpenQA.Selenium;
using OpenQA.Selenium.Chrome;

class Program
{
    static void Main()
    {
        // Initialize the Chrome WebDriver
        IWebDriver driver = new ChromeDriver();

        try
        {
            // Navigate to the URL containing the elements
            driver.Navigate().GoToUrl("your_url_here");

            // Locate the 'adp-select' element based on its association with a div containing the text 'Celergo Stage'
            IWebElement adpSelect = driver.FindElement(By.XPath("//div[text()='Celergo Stage']/following::adp-select"));

            // Perform actions on the 'adp-select' element if needed
            // Example: Click the element or interact with it as needed
            adpSelect.Click();

            Console.WriteLine("adp-select element interacted with successfully.");
        }
        catch (Exception ex)
        {
            Console.WriteLine("An error occurred: " + ex.Message);
        }
        finally
        {
            // Close the browser
            driver.Quit();
        }
    }
}
