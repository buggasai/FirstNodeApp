using FlaUI.Core;
using FlaUI.UIA3;
using FlaUI.Core.Input;

namespace FlaUIExample
{
    class Program
    {
        static void Main(string[] args)
        {
            // Create an automation object
            using (var automation = new UIA3Automation())
            {
                // Find the window you want to interact with (replace with your window's title or other identifying method)
                var app = Application.Launch("notepad.exe");
                var mainWindow = app.GetMainWindow(automation);

                // Focus the window
                mainWindow.Focus();

                // Simulate F2 key press
                Keyboard.Press(VirtualKeyShort.F2);
                Keyboard.Release(VirtualKeyShort.F2);

                // Close the application
                app.Close();
            }
        }
    }
}
