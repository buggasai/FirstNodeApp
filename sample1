using System;
using HtmlAgilityPack;

class HtmlParserExample
{
    public void FindAnchorTagWithText(string htmlFilePath)
    {
        // Load the HTML document
        var htmlDoc = new HtmlDocument();
        htmlDoc.Load(htmlFilePath);

        try
        {
            // Define the XPath to locate the anchor tag with the text "Faktura"
            string xpath = "//a[text()='Faktura']";

            // Select the anchor node
            var anchorNode = htmlDoc.DocumentNode.SelectSingleNode(xpath);

            // Check if the anchor node is found and get its attributes or inner text
            if (anchorNode != null)
            {
                string hrefValue = anchorNode.GetAttributeValue("href", string.Empty);
                Console.WriteLine("The href attribute of the anchor tag is: " + hrefValue);
            }
            else
            {
                Console.WriteLine("Anchor tag with text 'Faktura' not found.");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine("Error: " + ex.Message);
        }
    }
}

class Program
{
    static void Main(string[] args)
    {
        HtmlParserExample example = new HtmlParserExample();
        example.FindAnchorTagWithText("path_to_your_html_file.html");
    }
}
