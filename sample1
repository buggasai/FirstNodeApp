using System;
using System.IO;
using System.Linq;

class Program
{
    static void Main()
    {
        string directoryPath = @"C:\Your\Directory\Path";
        string fileName = "exactFileName.ext";

        var matchingFiles = Directory.GetFiles(directoryPath)
                                     .Where(file => Path.GetFileName(file).Equals(fileName, StringComparison.OrdinalIgnoreCase));

        foreach (var file in matchingFiles)
        {
            Console.WriteLine(file);
        }
    }
}
