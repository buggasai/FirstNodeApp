using System;
using OpenQA.Selenium;
using OpenQA.Selenium.Chrome;

class Program
{
    static void Main()
    {
        // Initialize the Chrome WebDriver
        IWebDriver driver = new ChromeDriver();

        try
        {
            // Navigate to the URL containing the elements
            driver.Navigate().GoToUrl("your_url_here");

            // Locate the parent div with class name "Abc" of the h5 tag with the text "Grant Access"
            IWebElement parentDiv = driver.FindElement(By.XPath("//h5[text()='Grant Access']/ancestor::div[@class='Abc']"));

            // Locate the button within this div that contains a span with the text "Action"
            IWebElement actionButton = parentDiv.FindElement(By.XPath(".//button[.//span[text()='Action']]"));

            // Perform actions on the button if needed
            // Example: Click the button
            actionButton.Click();

            Console.WriteLine("Action button clicked successfully.");
        }
        catch (Exception ex)
        {
            Console.WriteLine("An error occurred: " + ex.Message);
        }
        finally
        {
            // Close the browser
            driver.Quit();
        }
    }
}
