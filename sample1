using System;
using System.Text.RegularExpressions;

class Program
{
    static void Main(string[] args)
    {
        string input = "hellÄ…"; // Example string with special characters
        string escapedString = GetUnicodeEscapeSequences(input);
        Console.WriteLine(escapedString); // Output: \u0068\u0065\u006c\u006c\u0105
    }

    static string GetUnicodeEscapeSequences(string input)
    {
        string escapedString = Regex.Replace(input, @"[^\x20-\x7E]", m => "\\u" + ((int)m.Value[0]).ToString("x4"));
        return escapedString;
    }
}
