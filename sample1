using System;
using System.Text.RegularExpressions;

class Program
{
    static void Main()
    {
        string input = "This is a sample string with (some text) inside parentheses.";

        // Use a regular expression to find text within parentheses
        string pattern = @"\(([^)]*)\)";
        Match match = Regex.Match(input, pattern);

        if (match.Success)
        {
            string textWithinParentheses = match.Groups[1].Value;
            Console.WriteLine("Text within parentheses: " + textWithinParentheses);
        }
        else
        {
            Console.WriteLine("No text found within parentheses.");
        }
    }
}
