import os
from selenium import webdriver
from selenium.webdriver.common.by import By

# Setup WebDriver (example using Chrome)
driver = webdriver.Chrome()

# Navigate to the target webpage
driver.get("https://example.com/upload")

# Step 1: Locate the file input element
file_input = driver.find_element(By.ID, "file-upload-input")  # Use the correct selector for your file input

# Step 2: Construct the file path to the Temp folder on the desktop
desktop_path = os.path.join(os.path.expanduser("~"), "Desktop")
temp_folder_path = os.path.join(desktop_path, "Temp")
file_to_upload = os.path.join(temp_folder_path, "yourfile.txt")  # Replace with your actual file name

# Step 3: Upload the file by sending the file path to the file input element
file_input.send_keys(file_to_upload)

# Step 4: Locate and click the "Upload" button
upload_button = driver.find_element(By.ID, "upload-button")  # Use the correct selector for your upload button
upload_button.click()

# Close the driver (optional, depending on further actions)
driver.quit()
