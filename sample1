using System;
using OpenQA.Selenium;
using OpenQA.Selenium.Chrome;

class Program
{
    static void Main()
    {
        // Initialize the Chrome WebDriver
        IWebDriver driver = new ChromeDriver();

        try
        {
            // Navigate to the URL containing the button
            driver.Navigate().GoToUrl("your_url_here");

            // Locate the button by finding the span with the specific text
            IWebElement button = driver.FindElement(By.XPath("//button[.//span[text()='Login by SSO']]"));

            // Perform the click action on the button
            button.Click();

            Console.WriteLine("Button clicked successfully.");
        }
        catch (Exception ex)
        {
            Console.WriteLine("An error occurred: " + ex.Message);
        }
        finally
        {
            // Close the browser
            driver.Quit();
        }
    }
}
