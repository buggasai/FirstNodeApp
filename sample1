using FlaUI.Core;
using FlaUI.Core.Input;
using System.Threading;

// Example string with special characters interspersed
string stringWithSpecialCharacters = "abc!@def#$ghi%^jkl";

// Set the string to the clipboard
Clipboard.SetText(stringWithSpecialCharacters);

// Simulate Ctrl+V to paste the clipboard content
Keyboard.Press(VirtualKeyShort.CONTROL);
Keyboard.Type(VirtualKeyShort.V);
Keyboard.Release(VirtualKeyShort.CONTROL);

// Add a small delay to ensure the paste operation is successful
Thread.Sleep(100); // Adjust the delay as needed

// Optionally, clear the clipboard content after typing
Clipboard.Clear();
