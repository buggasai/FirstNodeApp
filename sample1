using OpenQA.Selenium;
using OpenQA.Selenium.Chrome;

class Program
{
    static void Main()
    {
        IWebDriver driver = new ChromeDriver();
        driver.Navigate().GoToUrl("your_webpage_url");

        try
        {
            // Use the improved XPath to find the input element
            IWebElement inputElement = driver.FindElement(By.XPath("//div[@id='pr']//tr[td[span[text()='versand']]]//td[last()]//input[@type='text']"));
            if (inputElement != null)
            {
                Console.WriteLine("Input element found.");
                // Perform actions on the input element, e.g., send keys
                inputElement.SendKeys("Sample Text");
            }
            else
            {
                Console.WriteLine("Input element not found.");
            }
        }
        catch (NoSuchElementException)
        {
            Console.WriteLine("Element not found.");
        }
        finally
        {
            driver.Quit();
        }
    }
}
