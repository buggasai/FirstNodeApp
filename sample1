using System;
using Microsoft.Office.Interop.Excel;

class Program
{
    static void Main()
    {
        Application excelApp = new Application();
        Workbook targetWorkbook = excelApp.Workbooks.Open(@"C:\Path\To\Target.xlsx");

        Worksheet targetWorksheet = targetWorkbook.Sheets[1];

        // Add "Import Name" to all rows in the "Payroll" column without a loop
        AddValueToPayrollColumn(targetWorksheet, "Payroll", "Import Name");

        // Save and close the workbook
        targetWorkbook.Save();
        targetWorkbook.Close(false);
        excelApp.Quit();
    }

    static void AddValueToPayrollColumn(Worksheet worksheet, string columnName, string valueToAdd)
    {
        int columnIndex = FindColumnIndexByName(worksheet, columnName);

        if (columnIndex != -1)
        {
            Range usedRange = worksheet.UsedRange;
            int lastRow = usedRange.Rows.Count;

            // Construct the range that includes all the cells in the "Payroll" column
            Range payrollColumnRange = worksheet.Range[worksheet.Cells[2, columnIndex], worksheet.Cells[lastRow, columnIndex]];

            // Set the value to the entire range at once
            payrollColumnRange.Value = valueToAdd;
        }
    }

    static int FindColumnIndexByName(Worksheet worksheet, string columnName)
    {
        Range usedRange = worksheet.UsedRange;
        for (int col = 1; col <= usedRange.Columns.Count; col++)
        {
            if ((usedRange.Cells[1, col] as Range).Value?.ToString() == columnName)
            {
                return col;
            }
        }
        return -1;
    }
}
