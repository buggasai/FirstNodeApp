using FlaUI.Core.Input;
using System.Threading;

// Example special characters
string specialCharacters = "!@#$%^&*()_+{}|:\"<>?";

// Loop through each special character and type it
foreach (char c in specialCharacters)
{
    // Use Keyboard.Type to type each special character
    Keyboard.Type(c.ToString());

    // Add a small delay between each character to simulate human typing speed
    Thread.Sleep(100); // Adjust the delay as needed
}

// Optionally, you can use Keyboard.Press for individual keys if needed
// For example:
// Keyboard.Press(VirtualKeyShort.Shift);
// Keyboard.Press(VirtualKeyShort.Number1); // Types !
// Keyboard.Release(VirtualKeyShort.Shift);
