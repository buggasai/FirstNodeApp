using System;
using OpenQA.Selenium;
using OpenQA.Selenium.Chrome;

class Program
{
    static void Main()
    {
        // Initialize the Chrome WebDriver
        IWebDriver driver = new ChromeDriver();

        try
        {
            // Navigate to the URL containing the elements
            driver.Navigate().GoToUrl("your_url_here");

            // Locate the button with a span containing the text "Action" within the div with class "Abc" that has an h5 with the text "Grant Access"
            IWebElement actionButton = driver.FindElement(By.XPath("//div[@class='Abc' and .//h5[text()='Grant Access']]//button[.//span[text()='Action']]"));

            // Perform actions on the button if needed
            // Example: Click the button
            actionButton.Click();

            Console.WriteLine("Action button clicked successfully.");
        }
        catch (Exception ex)
        {
            Console.WriteLine("An error occurred: " + ex.Message);
        }
        finally
        {
            // Close the browser
            driver.Quit();
        }
    }
}
