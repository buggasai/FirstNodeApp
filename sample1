using System;

class Program
{
    static void Main(string[] args)
    {
        string str = "hellÄ…"; // Example string
        char newChar = 'o'; // Character to replace the last character with
        string result = ReplaceLastCharacter(str, newChar);
        Console.WriteLine($"The new string is: '{result}'");
    }

    static string ReplaceLastCharacter(string input, char newChar)
    {
        if (string.IsNullOrEmpty(input))
        {
            throw new ArgumentException("Input string cannot be null or empty", nameof(input));
        }

        char[] charArray = input.ToCharArray();
        charArray[charArray.Length - 1] = newChar;
        return new string(charArray);
    }
}
