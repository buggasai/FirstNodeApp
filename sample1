using System;
using System.Collections.Generic;

class Program
{
    static void Main()
    {
        string input = "This is a long string that should be split into smaller parts if it exceeds thirty characters.";
        
        // Call the function to split the string
        string[] result = SplitStringIfLong(input, 30);
        
        // Print the resulting array
        foreach (var part in result)
        {
            Console.WriteLine(part);
        }
    }

    static string[] SplitStringIfLong(string input, int maxLength)
    {
        if (input.Length <= maxLength)
        {
            // If the input string is less than or equal to maxLength, return it as a single-element array
            return new string[] { input };
        }
        else
        {
            // Otherwise, split the string into smaller parts
            List<string> parts = new List<string>();

            for (int i = 0; i < input.Length; i += maxLength)
            {
                // Ensure we don't exceed the string length
                int length = Math.Min(maxLength, input.Length - i);
                parts.Add(input.Substring(i, length));
            }

            return parts.ToArray();
        }
    }
}
