using System;
using System.Runtime.InteropServices;
using Excel = Microsoft.Office.Interop.Excel;

class Program
{
    static void Main()
    {
        // Create a new Excel application
        Excel.Application excelApp = new Excel.Application();
        excelApp.Visible = true; // Make Excel application visible for debugging

        Excel.Workbook workbook = null;

        try
        {
            // Define the path to the workbook
            string filePath = @"C:\path\to\your\file.xlsx";

            // Open the workbook
            workbook = excelApp.Workbooks.Open(filePath);

            // Define the worksheet name
            string worksheetName = "Sheet4"; // Replace with your worksheet name

            // Access and activate the worksheet
            Excel.Worksheet worksheet = (Excel.Worksheet)workbook.Sheets[worksheetName];
            worksheet.Activate();

            // Get the used range of the active worksheet
            Excel.Range usedRange = worksheet.UsedRange;

            // Get the row count from column A
            Excel.Range columnARange = worksheet.Columns[1];
            Excel.Range columnAUsedRange = columnARange.SpecialCells(Excel.XlCellType.xlCellTypeLastCell);
            int rowCount = columnAUsedRange.Row;

            Console.WriteLine($"Row count in column A of {worksheetName}: {rowCount}");

            // Save the workbook if needed
            // workbook.Save();
        }
        catch (COMException comEx)
        {
            Console.WriteLine($"COM Error: {comEx.Message}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"General Error: {ex.Message}");
        }
        finally
        {
            // Close the workbook and quit Excel application
            if (workbook != null)
            {
                workbook.Close(false);
                Marshal.ReleaseComObject(workbook);
            }
            excelApp.Quit();
            Marshal.ReleaseComObject(excelApp);

            GC.Collect();
            GC.WaitForPendingFinalizers();
        }
    }
}
