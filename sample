using System;
using Microsoft.Office.Interop.Excel;

class Program
{
    static void Main()
    {
        string remoteFilePath = "RemoteFilePath.xlsx";  // Replace with the remote path to your Excel file
        string localFilePath = "LocalFilePath.xlsx";    // Replace with the local path where you want to save the file

        SaveExcelToLocal(remoteFilePath, localFilePath);
    }

    static void SaveExcelToLocal(string remoteFilePath, string localFilePath)
    {
        var excelApp = new Application();
        var workbook = excelApp.Workbooks.Open(remoteFilePath);

        // Save the workbook to the local path
        workbook.SaveAs(localFilePath);

        // Close the workbook and Excel application
        workbook.Close();
        excelApp.Quit();

        Console.WriteLine($"Excel file saved to: {localFilePath}");
    }
}
